sysnet_read_config(dpkg_t)

userdom_use_user_terminals(dpkg_t)
userdom_use_unpriv_users_fds(dpkg_t)

dpkg_domtrans_script(dpkg_t)

optional_policy(`
	apt_use_ptys(dpkg_t)
')

optional_policy(`
