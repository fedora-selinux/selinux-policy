modutils_run_kmod(dpkg_t, dpkg_roles)
modutils_run_kmod(dpkg_t, dpkg_roles)
seutil_run_loadpolicy(dpkg_t, dpkg_roles)
seutil_run_setfiles(dpkg_t, dpkg_roles)
userdom_use_all_users_fds(dpkg_t)

optional_policy(`
