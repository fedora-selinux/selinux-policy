optional_policy(`
	dbus_system_domain(devicekit_t, devicekit_exec_t)
	dbus_system_bus_client(devicekit_t)

	allow devicekit_t { devicekit_disk_t devicekit_power_t }:dbus send_msg;
')

optional_policy(`
	udev_read_db(devicekit_t)
')

