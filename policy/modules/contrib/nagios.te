    apache_systemctl(nagios_t)
')

optional_policy(`
    dbus_system_bus_client(nagios_t)
')

optional_policy(`
    tunable_policy(`nagios_run_sudo',`
        sudo_exec(nagios_t)
        sudo_manage_db(nagios_t)
    ')
')

